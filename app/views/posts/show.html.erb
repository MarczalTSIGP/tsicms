<% provide(:page_title, "Visualizar Post") %>

<div class="card mx-auto mt-4" style="width: 60%">
  <div class="card-header" text-align="center">
    <h3 class="pt-4"><%= @post.title %></h3>
  </div>
  <div class="card-body">
    <p class="mb-6"><%= l(@post.created_at, format: :long) %></p>
    <h5 class="mb-4">Categoria da Not√≠cia: <%= @post.post_category.name %></h5>
    <p class="mb-2"><%= @post.description %></p>
  </div>
</div>

<div class="d-flex ml-9">
  <%= link_to "Voltar", posts_path, class: 'btn btn-secondary' %>
</div>
