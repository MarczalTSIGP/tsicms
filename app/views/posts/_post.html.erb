<div class="col-sm-6 col-xl-3 mt-5">
  <div class="card">
    <div class="card-body d-flex flex-column">
      <h4><%= link_to post.title, post_path(post) %></h4>
      <div class="d-flex align-items-center">
        <div>
          <%= link_to post.description, post_path(post) %>
          <small class="d-block text-muted"><%= l(post.created_at, format: :long) %></small>
        </div>
      </div>
    </div>
  </div>
</div>
