<section class="bg-primary" id="trainees">
  <div class="container text-center">
    <h2 class="mb-4">Oportunidades de Estágio</h2>
    <hr class="light">
    <div class="row">
      <hr class="my-4">
      <%@trainees.each do |t| %>
      <div class="col-sm-6 py-2">
        <div class="card h-100">
          <div class="card-body">
            <%= image_tag t.company.image.url, class:'avatar avatar-xxl mr-5' %>
            <h4 class="m-0">
              <%= t.company.name %>
            </h4>
            <p class="text-muted mb-0">
              <%= link_to t.company.site, t.company.site, target: '_blank' %>
            </p>
            <ul class="social-links list-inline mb-0 mt-2">
              <li class="list-inline-item">
                <strong>Função: </strong>
                <%= t.title %>
              </li>
              <li class="list-inline-item">
                <strong>Status: </strong>
                <%= t.trainee_status.name %>
              </li>
              <hr>
              <li class="list-inline-item">
                <strong>Descrição: </strong>
                <%= t.description %>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>
