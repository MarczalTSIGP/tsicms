<%= paginate @recommendations %>

<div class="row">
  <div class="col-sm-10">
    <h1 class="ml-6 mt-5">Recomendações</h1>
    <div class="row row-cards row-deck mx-2">
      <% if current_page?(recommendations_path) %>
        <%= render @recommendations %>
      <% else %>
        <%= render @recommendations_category %>
      <% end %>
    </div>
  </div>

  <div class="col-sm-2">
    <h3 class="ml-4 mt-7 pb-4">Categorias</h3>
    <div class="row row-cards row-deck mx-2 ml-4 mb-5">
      <h5><%= link_to 'Todas', recommendations_path %></h5>
    </div>
    <% @categories.each do |category| %>
      <div class="row row-cards row-deck mx-2 ml-4 mb-5">
        <h5><%= link_to category.name, recommendations_by_category_path(category.id) %></h5>
      </div>  
    <% end %>
  </div>
</div>

<div class="d-flex ml-4 mb-4">
  <a class="btn btn-secondary" href="/#recommendations">Voltar</a>
</div>
