<% provide(:page_title, 'Matrizes') %>

<div class=" text-right">
  <%= link_to new_admins_matrix_path,
    class: 'btn btn-secondary', title: ' Nova Matriz',
    data: { toggle: 'tooltip', placement: 'top' } do %>
    <i class="fas fa-plus"></i>
  <% end %>
</div>

<%= paginate @matrices %>

<div class="table-responsive">
  <table class="table table-data card-table table-vcenter text-nowrap">
    <thead>
      <tr>
        <th class="w-1">Id</th>
        <th><%= t('activerecord.attributes.matrix.name') %></th>
        <th><%= t('activerecord.attributes.matrix.created_at') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render @matrices %>
    </tbody>
  </table>
</div>
