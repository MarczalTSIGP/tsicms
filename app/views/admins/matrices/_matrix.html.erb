<tr>
  <td><%= matrix.id %></td>
  <td><%= matrix.name %></td>
  <td><%= l(matrix.created_at, format: :long) %></td>
  <td>
    <%= link_to edit_admins_matrix_path(matrix) do%>
      <span class="icon mr-3">
        <i class="fas fa-edit" data-toggle="tooltip"
                               data-placement="top" title="Editar"></i>
      </span>
    <% end %>
    <%= link_to [:admins, matrix], method: :delete,
      data: { confirm: t('prompt.confirm')} do%>
      <span class="icon mr-3">
        <i class="fas fa-trash-alt" data-toggle="tooltip"
                                    data-placement="top" title="Remover"></i>
      </span>
    <% end %>
    <%= link_to admins_matrix_path(matrix) do%>
      <span class="icon mr-3">
        <i class="fas fa-eye" data-toggle="tooltip"
                              data-placement="top" title="Mostrar"></i>
      </span>
    <% end %>
  </td>
</tr>
