<% provide(:page_title, 'Períodos do Professor na Instituição') %>

<div class=" text-right">
  <%= link_to  new_admins_periods_professor_path,
    class: 'btn btn-secondary',
    title: ' Novo Período',
    data:{ toggle: 'tooltip', placement: 'top'} do%>
    <i class="fas fa-plus"></i>
  <% end %>
</div>

<div class="table-responsive">
  <table  id="professor_periods" class="table table-data card-table table-vcenter text-nowrap">
    <thead>
      <tr>
        <th class="w-1">Id</th>
        <th><%= t('activerecord.attributes.period_professor.professor.name') %> </th>
        <th><%= t('activerecord.attributes.period_professor.date_entry') %></th>
        <th><%= t('activerecord.attributes.period_professor.date_out') %></th>
        <th><%= t('activerecord.attributes.period_professor.professor.professor_category') %> </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render @periods_professor %>
    </tbody>
  </table>
</div>
