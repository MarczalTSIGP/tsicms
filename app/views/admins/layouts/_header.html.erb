<div class="header py-4">
  <div class="container">
    <div class="d-flex">
      <%= link_to admins_root_path, class: 'header-brand' do %>
        <% image_tag 'logo-tsi-text.png', class: 'header-brand-img'  %>
      <% end  %>
      <div class="d-flex order-lg-2 ml-auto">
      
        <div class="dropdown d-none d-md-flex">
          <a class="nav-link icon" data-toggle="dropdown">
            <i class="fe fe-bell"></i>
            <span class="nav-unread"></span>
          </a>
          
          <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow" style="width: 400px; text-overflow: clip;">
            <%= render "admins/layouts/message" %>
            <div class="dropdown-divider"></div>
              <%= active_link_to admins_contacts_path do %>
                <span class="dropdown-item text-center text-muted-dark">Ver todas as mensagens</span>
              <% end %>
              <%= active_link_to "#" do %>
                <span class="dropdown-item text-center text-muted-dark">Marcar todas como lidas</span>
              <% end %>
            </div>                    
          </div>

        <div class="dropdown">
          <a href="#" class="nav-link user-options-dropdown pr-0 leading-none" data-toggle="dropdown">
            <span class="avatar" style="background-image: url('<%= current_admin.image %>')"></span>

            <span class="ml-2 d-none d-lg-block">
              <span class="text-default"><%= current_admin.name %></span>
              <small class="text-muted d-block mt-1">Administrator</small>
            </span>
          </a>

          <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
            <%= link_to edit_admin_registration_path, class: 'dropdown-item' do %>
              <i class="dropdown-icon fe fe-user"></i> Perfil
            <% end %>
            <%= link_to destroy_admin_session_path, method: :delete, class: 'dropdown-item' do %>
              <i class="dropdown-icon fe fe-log-out"></i> Sair
            <% end %>
          </div>
        </div>

      </div>

    </div>
  </div>
</div>
