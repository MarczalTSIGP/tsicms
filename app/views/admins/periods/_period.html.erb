 <tr>
    <td><%= period.name %></td>
    <td><%= period.matrix.name %></td>
    <td><%= l(period.created_at, format: :long) %></td>

    <td>
        
        <%= link_to edit_admins_period_path(period) do%>
            <span class="icon mr-3"><i class="fas fa-edit"
            data-toggle="tooltip" data-placement="top" title="Editar"></i></span>
        <% end %>

        <%= link_to [:admins, period], method: :delete, data: { confirm: t('prompt.confirm')} do%>
            <span class="icon mr-3"><i class="fas fa-trash-alt"
            data-toggle="tooltip" data-placement="top" title="Remover"></i></span>
        <% end %>

        <%= link_to admins_period_path(period) do%>
            <span class="icon mr-3"><i class="fas fa-eye" 
            data-toggle="tooltip" data-placement="top" title="Mostrar"></i></span>
        <% end %>

    </td>
          
</tr>