<%= simple_form_for [:admins, @trainee] do |f| %>

  <%= f.input :title, autofocus: true %>
  <%= f.input :description, input_html: {class: 'markdown-editor'} %>

  <div class="form-row">
    <div class="col-sm-6">
      <%= f.association :company,
                        prompt: t('prompt.select.f', name: 'Empresa') %>
    </div>
    <div class="col-sm-6">
      <%= f.association :trainee_status,
                        prompt: t('prompt.select.m', name: 'Status') %>
    </div>
  </div>

  <div class="d-flex">
    <%= link_to "Voltar", admins_trainees_path, class: 'btn btn-secondary' %>
    <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
  </div>
<% end %>

