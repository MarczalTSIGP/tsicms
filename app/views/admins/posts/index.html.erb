<% provide(:page_title, 'Notícias') %>

<div class="text-right">
  <%= link_to new_admins_post_path,
              class: 'btn btn-secondary',
              title: 'Nova notícia',
              data: { toggle: 'tooltip', placement: 'top' } do %>
    <i class="fas fa-plus"></i>
  <% end %>
</div>

<%= paginate @posts %>

<div class="table-responsive">
  <table class="table card-table table-vcenter text-nowrap" id="posts_table">
    <thead>
    <tr>
      <th>Título</th>
      <th>Categoria</th>
      <th>Data de criação</th>
      <th>Publicado</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <%= render @posts %>
    </tbody>
  </table>
</div>
