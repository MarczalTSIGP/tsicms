<tr>
  <td><%= post.title %></td>
  <td><%= post.post_category.name %></td>
  <td><%= l(post.created_at, format: :long) %></td>
  <td><%= t("helpers.boolean.#{post.posted}") %></td>
  <td>
    <%= link_to edit_admins_post_path(post) do %>
      <span class="icon mr-3">
        <i class="fas fa-edit" data-toggle="tooltip" data-placement="top" title="Editar"></i>
      </span>
    <% end %>

    <%= link_to [:admins, post], method: :delete, data: { confirm: t('prompt.confirm') } do %>
      <span class="icon mr-3">
        <i class="fas fa-trash-alt" data-toggle="tooltip" data-placement="top" title="Remover"></i>
      </span>
    <% end %>
  </td>
</tr>
