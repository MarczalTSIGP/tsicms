<% provide(:page_title, 'Monitorias') %>

<div class="text-right">
    <%= link_to new_admins_discipline_monitor_path,
        class: 'btn btn-secondary',
        title: 'Novo acadêmico',
        data: { toggle: 'tooltip', placement: 'top' } do %>
        <i class="fas fa-plus"></i>
    <% end %>
</div>

<div class="table-responsive">
    <table class="table table-data card-table table-vcenter text-nowrap" id="academics_table">
        <thead>
            <tr>
                <th>Acadêmico</th>
                <th>Tipo da Monitoria</th>
                <th>Semestre</th>
                <th>Ano</th>
                <th>Disciplinas</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <%= render @discipline_monitors %>
        </tbody>
    </table>
</div>
