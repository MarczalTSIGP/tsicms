<tr>
  <td><%= discipline_monitor.academic.name %></td>
  <td><%= discipline_monitor.monitor_type.name %></td>
  <td><%=t("enums.semesters.#{discipline_monitor.semester}") %></td>
  <td><%= discipline_monitor.year %></td>
  <td><%= "Nome da disciplina" %></td>
  <td>
    <%= link_to edit_admins_discipline_monitor_path(discipline_monitor) do %>
      <span class="icon mr-3">
        <i class="fas fa-edit" data-toggle="tooltip" data-placement="top" title="Editar"></i>
      </span>
    <% end %>

    <%= link_to [:admins, discipline_monitor], method: :delete, data: { confirm: t('prompt.confirm') } do %>
      <span class="icon mr-3">
        <i class="fas fa-trash-alt" data-toggle="tooltip" data-placement="top" title="Remover"></i>
      </span>
    <% end %>

    <%= link_to admins_discipline_monitor_path(discipline_monitor) do %>
      <span class="icon mr-3">
        <i class="fe fe-eye" data-toggle="tooltip" data-placement="top" title="Mostrar"></i>
      </span>
    <% end %>
  </td>
</tr>
