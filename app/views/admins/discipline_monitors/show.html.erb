<% provide(:page_title, "Monitoria de Disciplina ##{@discipline_monitor.id}") %>

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Nome da disciplina</h3>
  </div>
  <div class="card-body">
    <p>
      <strong>Monitor</strong>:
      <%= @discipline_monitor.academic.name %>
    </p>
    <p>
      <strong>Ano</strong>:
      <%= @discipline_monitor.year %>
    </p>
    <p>
      <strong>Semestre</strong>:
      <%= t("enums.semesters.#{@discipline_monitor.semester}") %>
    </p>
    <p>
      <strong>Tipo da monitoria</strong>:
      <%= @discipline_monitor.monitor_type.name %>
    </p>
    <p>
      <strong>Descrição</strong>:
      <span class="markdown-content" data-markdown="<%= @discipline_monitor.description %>">
        <%= @discipline_monitor.description %>
      </span>
    </p>
    <p>
      <strong>Professores responsáveis</strong>:
      <% @discipline_monitor.discipline_monitor_professors.each do |d| %>
        <p><%= d.professor.name %></p>
      <% end %>
    </p>
  </div>
</div>

<div class="d-flex">
  <%= link_to "Voltar", admins_discipline_monitors_path, class: 'btn btn-secondary' %>
</div>



