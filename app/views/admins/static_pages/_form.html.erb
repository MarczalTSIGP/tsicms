<%= simple_form_for [:admins, @static_page] do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <%= f.input :title %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%= f.input :sub_title %>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= f.input :permalink %>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= f.input :fixed %>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= f.association :activity,
                        collection: Activity.order(name: :asc),
                        prompt: t('prompt.select.f', name: I18n.t('breadcrumbs.activities.name')) %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= f.input :content, input_html: {class: 'markdown-editor'} %>
    </div>
  </div>

  <div class="d-flex">
    <%= link_to "Voltar", admins_static_pages_path, class: 'btn btn-secondary' %>
    <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
  </div>
<% end %>
