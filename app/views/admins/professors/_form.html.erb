<%= simple_form_for [:admins, @professor] do |f| %>
  
  <div class="form-row">
    <div class="col-sm-9">
      <%= f.input :name, autofocus: true %>
      <%= f.input :email %>
      <%= f.input :gender, as: :radio_buttons, collection: Professor.human_genders,
          item_wrapper_class: 'inline custom-control custom-radio custom-control-inline' %>

    </div>

    <div class="col-sm-3">
      <div id="box-image-preview" data-toggle="tooltip" data-placement="left" title="Clique na imagem para alterá-la">
        <div class="input-field image_preview">
          <div class="box-image center">
            <%= image_tag @professor.image.url, class: 'file_preview active' %>
            <%= f.input :image, label: false, input_html: { accept: 'image/*' }  %>
            <%= f.hidden_field :image_cache %>
          </div>
        </div>
        <div class="text-box text-center">
          <p class="text-input">Clique na imagem para alterá-la</p>
        </div>
      </div>
    </div>
  </div>
    
  <%= f.input :lattes %>

  <div class="form-row">
    <div class="col-sm-6">
      <%= f.association :professor_title,
        prompt: t('prompt.select.m', name: 'título') %>
    </div>
    <div class="col-sm-6">
      <%= f.association :professor_category,
        prompt: t('prompt.select.m', name: 'tipo') %>
    </div>
  </div>

  <%= f.input :occupation_area %>

  <div class="d-flex">
    <%= link_to "Voltar", admins_professors_path, class: 'btn btn-secondary' %>
    <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
  </div>
<% end %>

