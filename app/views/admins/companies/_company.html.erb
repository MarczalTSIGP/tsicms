<tr>
  <td><%= company.id %></td>
  <td><%= company.name %></td>
  <td><%= l(company.created_at, format: :long) %></td>
  <td>
    <%= link_to [:admins, company], method: :delete, data: {confirm: t('prompt.confirm')} do %>
      <span class="icon mr-3">
        <i class="fas fa-trash-alt" data-toggle="tooltip" data-placement="top" title="Remover"></i>
      </span>
    <% end %>
    <%= link_to edit_admins_company_path(company) do %>
      <span class="icon mr-3">
        <i class="fas fa-edit" data-toggle="tooltip" data-placement="top" title="Editar"></i>
      </span>
    <% end %>
    <%= link_to admins_company_path(company) do %>
      <span class="icon mr-3">
        <i class="fa fa-eye" data-toggle="tooltip" data-placement="top" title="Mostrar"></i>
      </span>
    <% end %>
  </td>
</tr>
