<h4 class="text-center">Vagas de estagio</h4>
<div class="text-right">
  <%= link_to new_admins_trainee_path(:company => @company.id),
    class: 'btn btn-secondary',
    title: 'Adicionar Vaga de EstÃ¡gio',
    data: {toggle: 'tooltip', placement: 'top'} do %>
    <i class="fas fa-plus"></i>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-data card-table table-vcenter text-nowrap">
    <thead>
      <tr>
        <th class="w-1">Id</th>
        <th>Titulo</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @company.trainees.each do |trainee| %>
        <tr id="professor_activity">
          <td><%= trainee.id %></td>
          <td><%= trainee.title %></td>
          <td><%= trainee.trainee_status.name %></td>
          <td>
            <%= link_to [:admins, trainee], method: :delete, data: {confirm: t('prompt.confirm')} do %>
              <span class="icon mr-3">
                <i class="fas fa-trash-alt" data-toggle="tooltip" data-placement="top" title="Remover"></i>
              </span>
            <% end %>

            <%= link_to edit_admins_trainee_path(trainee) do %>
              <span class="icon mr-3">
                <i class="fas fa-edit" data-toggle="tooltip" data-placement="top" title="Editar"></i>
              </span>
            <% end %>

            <%= link_to admins_trainee_path(trainee) do %>
              <span class="icon mr-3">
                <i class="fa fa-eye" data-toggle="tooltip" data-placement="top" title="Mostrar"></i>
              </span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
