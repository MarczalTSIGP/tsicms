<% provide(:page_title, 'Recomendações de Conteúdo') %>

<div class="text-right">
  <%= link_to new_admins_recommendation_path,
              class: 'btn btn-secondary',
              title: 'Nova recomendação',
              data: { toggle: 'tooltip', placement: 'top' } do %>
    <i class="fas fa-plus"></i>
  <% end %>
</div>

<%= paginate @recommendations %>

<div class="table-responsive">
  <table class="table card-table table-vcenter text-nowrap" id="recommendations_table">
    <thead>
    <tr>
      <th>Título</th>
      <th>Categoria</th>
      <th>Data de criação</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <%= render @recommendations %>
    </tbody>
  </table>
</div>
