<% provide(:page_title, 'Todas Atividades') %>

<div class="text-right">
  <%= link_to new_admins_activity_path,
    class: 'btn btn-secondary',
    title: 'Nova Atividade',
    data: { toggle: 'tooltip', placement: 'top' } do %>
    <i class="fas fa-plus"></i>
  <% end %>
</div>

<%= paginate @activities %>

<div class="table-responsive">
  <table class="table table-data card-table table-vcenter text-nowrap" id="academics_table">
    <thead>
      <tr>
        <th>Nome</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render @activities %>
    </tbody>
  </table>
</div>
