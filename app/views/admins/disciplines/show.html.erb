 <% provide(:page_title, 'Visualizar Disciplina ') %>

 <% breadcrumb :show_discipline, @disciplines %>


<div class="card-body">

  <div class="row">

     <div class="col-md-12">
        <strong>Name:</strong>
        <%= @discipline.name %>
      </div>

      <div class="col-sm-6 col-md-5">
        <strong>Code:</strong>
        <%= @discipline.code %>
      </div>

      <div class="col-sm-6 col-md-5">
        <strong>Workload:</strong>
        <%= @discipline.hours %>
      </div>


      <div class="col-sm-6 col-md-5">
        <strong>Periodo:</strong>
        <%= @discipline.period.name %>
      </div>

      <div class="col-sm-6 col-md-5">
        <strong>Periodo:</strong>
        <%= @discipline.period.matrix.name %>
      </div>


      <div class="col-md-12" id="content"> 
        <strong>Menu:</strong>
        <div class="card-body apply-markdown" data-markdown="<%= @discipline.menu %>"></div>
      </div>

  </div>
  
  <div class="d-flex">
    <%= link_to "Voltar", admins_disciplines_path, class: 'btn btn-secondary' %>
  </div>

</div>


 