<% provide(:page_title, 'Disciplinas') %>

<% breadcrumb :disciplines %>

<div class=" text-right">
  <%= link_to  new_admins_discipline_path, 
              class: 'btn btn-secondary', 
              title: ' Nova Disciplina', 
              data:{ toggle: 'tooltip', placement: 'top'} do%>
    <i class="fas fa-plus"></i>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-data card-table table-vcenter text-nowrap">
    <thead>
      <tr>
        <th><%= I18n.t('activerecord.attributes.discipline.name') %></th>
        <th><%= I18n.t('activerecord.attributes.discipline.code') %></th>
        <th><%= I18n.t('activerecord.attributes.discipline.workload') %></th>
        <th><%= I18n.t('activerecord.attributes.discipline.period') %> </th>
        <th><%= I18n.t('activerecord.attributes.discipline.matrix') %> </th>
        <th></th>
      </tr>
    </thead>

    <tbody>
     <%= render @disciplines %>
    </tbody>
  </table>
</div>

<br>

<div class="ui right floated pagination menu">
  <%= will_paginate @disciplines, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>
