<% provide(:page_title, 'Disciplinas') %>

<div class=" text-right">
  <%= link_to  new_admins_discipline_path,
    class: 'btn btn-secondary',
    title: ' Nova Disciplina',
    data:{ toggle: 'tooltip', placement: 'top'} do%>
    <i class="fas fa-plus"></i>
  <% end %>
</div>
<div class="table-responsive">
  <table id='disciplines' class="table table-data card-table table-vcenter text-nowrap">
    <thead>
      <tr>
        <th class="w-1">Id</th>
        <th><%= I18n.t('activerecord.attributes.discipline.name') %></th>
        <th><%= I18n.t('activerecord.attributes.discipline.initials') %></th>
        <th><%= I18n.t('activerecord.attributes.discipline.period') %> </th>
        <th><%= I18n.t('activerecord.attributes.discipline.matrix') %> </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render @disciplines %>
    </tbody>
  </table>
  <%= paginate @disciplines %>
</div>
